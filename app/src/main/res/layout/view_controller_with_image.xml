<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_controller_with_image_logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Logo PNG"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_controller_with_image_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/view_controller_with_image_logo"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_controller_with_image_logo_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/view_controller_with_image_middle_images_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Webp"
            app:layout_constraintTop_toBottomOf="@id/view_controller_with_image_logo_text" />

        <ImageView
            android:id="@+id/view_controller_with_image_webp_left"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:layout_constraintTop_toBottomOf="@id/view_controller_with_image_middle_images_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_controller_with_image_webp_right" />

        <ImageView
            android:id="@+id/view_controller_with_image_webp_right"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_controller_with_image_middle_images_title"
            app:layout_constraintStart_toEndOf="@id/view_controller_with_image_webp_left" />

        <TextView
            android:id="@+id/view_controller_with_image_png_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Png"
            app:layout_constraintEnd_toStartOf="@id/view_controller_with_image_jpeg_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_controller_with_image_webp_left" />

        <TextView
            android:id="@+id/view_controller_with_image_jpeg_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Jpeg"
            app:layout_constraintStart_toEndOf="@id/view_controller_with_image_png_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_controller_with_image_webp_left" />

        <ImageView
            android:id="@+id/view_controller_with_image_png"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/view_controller_with_image_png_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_controller_with_image_jpeg" />

        <ImageView
            android:id="@+id/view_controller_with_image_jpeg"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_controller_with_image_jpeg_title"
            app:layout_constraintStart_toEndOf="@id/view_controller_with_image_png" />

        <TextView
            android:id="@+id/view_controller_with_image_very_big_jpeg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Very big jpeg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_controller_with_image_jpeg" />

        <ImageView
            android:id="@+id/view_controller_with_image_very_big_jpeg_1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_controller_with_image_very_big_jpeg_2"
            app:layout_constraintTop_toBottomOf="@id/view_controller_with_image_very_big_jpeg_title" />

        <ImageView
            android:id="@+id/view_controller_with_image_very_big_jpeg_2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toStartOf="@id/view_controller_with_image_very_big_jpeg_3"
            app:layout_constraintStart_toEndOf="@id/view_controller_with_image_very_big_jpeg_1"
            app:layout_constraintTop_toBottomOf="@id/view_controller_with_image_very_big_jpeg_title" />

        <ImageView
            android:id="@+id/view_controller_with_image_very_big_jpeg_3"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toEndOf="@id/view_controller_with_image_very_big_jpeg_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_controller_with_image_very_big_jpeg_title" />

        <TextView
            android:id="@+id/view_controller_with_image_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="00:00"
            app:layout_constraintTop_toBottomOf="@id/view_controller_with_image_very_big_jpeg_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>